@model CMS.Models.PrescriptionDetailModel

@{
    ViewData["Title"] = "Bill Details";
}

<h2>Appointment Details</h2>

<div>
    <h3>Appointment Information</h3>
    <p><strong>Appointment ID:</strong> @Model.AppointmentId</p>
    <p><strong>Patient Name:</strong> @Model.PatientName</p>
    <p><strong>Doctor Name:</strong> @Model.DoctorName</p>
    <p><strong>Created Date:</strong> @Model.CreatedDate.ToShortDateString()</p>
</div>

<h3>Medicine Prescriptions</h3>

<table class="table" border="1">
    <thead>
        <tr>
            <th>Medicine Name</th>
            <th>Quantity</th>
            <th>Price per Strip</th>
            <th>Total Amount</th>
            <th>GST (18%)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medicine in Model.MedicineDetails)
        {
            <tr>
                <td>@medicine.MedicineName</td>
                <td>@medicine.Quantity</td>
                <td>@medicine.PricePerStrip.ToString("C")</td>
                <td>@medicine.TotalAmount.ToString("C")</td>
                <td>@medicine.GST.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h4>Grand Total: @Model.GrandTotal.ToString("C")</h4>
</div>

<!-- Print Button -->
<button onclick="window.print()">Print Bill</button>

