@model IEnumerable<CMS.Models.PatientHistory>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Patient Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            margin: 0 auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .table th {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Patient Report</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Symptoms</th>
                    <th>Diagnosis</th>
                    <th>Treatment Plan</th>
                    <th>Medicine</th>
                    <th>Frequency</th>
                    <th>Dosage</th>
                    <th>Lab Test</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Symptoms</td>
                        <td>@item.Diagnosis</td>
                        <td>@item.TreatmentPlan</td>
                        <td>@item.Medicine</td>
                        <td>@item.Frequency</td>
                        <td>@item.Dosage</td>
                        <td>@item.LabTest</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script>
        window.onload = function() {
            window.print();
        };
    </script>
</body>
</html>
